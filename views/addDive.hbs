<h2>Add a new dive place</h2>

<form action="/addDive" method="POST" id="form" enctype="multipart/form-data">
  <label for="namePlace">Place Name </label>
  <input id="namePlace" type="text" name="namePlace" placeholder="Place Name ">

  <br><br>

  <label for="description">Description</label>
  <input id="description" type="text" name="description" placeholder="Description">
  <br>

  <label for="depthMeters">Depth in Meters</label>
  <input id="depthMeters" type="number" name="depthMeters" placeholder="Depth in Meters">
  
  <label for="dateDive">Date</label>
  <input id="dateDive" type="date" name="dateDive" placeholder="Date">

  <br><br>

  <label for="timeDiveMin">Time Dive in Minutes</label>
  <input id="timeDiveMin" type="number" name="timeDiveMin" placeholder="Time Dive">
  <br>

  <label for="valuations">Valuations (from 1 to 5)</label>
  <input id="valuations" type="number" name="valuations" placeholder="valuations">
  
  <label for="lng">Longitude</label>
  <input id="lng" type="text" name="lng" placeholder="Longitude">
  
  <label for="lat">Latitude</label>
  <input id="lat" type="text" name="lat" placeholder="Latitude">
  
  <label for="photo">Add image</label>
  <input id="photo" type="file" name="photo" placeholder="Add image">
  
  
  
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Add Dive Place</button>

</form>


